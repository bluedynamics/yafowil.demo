<html>
  <head>
    <title>YAFOWIL - Demo</title>
    
    <tal:js repeat="res resources['js']">
      <script src="${'/' + res}"></script>
    </tal:js>

    <tal:css repeat="res resources['css']">
      <link href="${'/' + res}" rel="stylesheet" type="text/css" media="all" />
    </tal:css>
    
  </head>
  <body>
  
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a href="/" class="brand">YAFOWIL DEMO</a>
        </div>
      </div>
    </div>
  
    <div class="container" style="margin-top:4em;">
    
      <div class="tabbable tabs-left">
        <ul class="nav nav-tabs">
          <tal:li repeat="widget widgets">
            <li class="${widget['plugin_name'] == plugin_name and 'active' or None}">
              <a href="${'/++widget++' + widget['plugin_name'] + '/index.html'}"
                 tal:content="widget['plugin_name']">
                plugin name
              </a>
            </li>
          </tal:li>
        </ul>
        <div class="tab-content"
             tal:condition="form">
          <h1 tal:content="plugin_name">Plugin name</h1>
          <tal:form replace="structure form" />
        </div>
        <div class="tab-content"
             tal:condition="not form">
          <h1>YAFOWIL Demo page</h1>
        </div>
      </div>
    
    </div>
  </body>
</html>